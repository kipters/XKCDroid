<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txtEntryList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">top</item>
    </style>



    <style name="txtEntryList.Title">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/EntryTitleTextSize</item>
    </style>

    <style name="txtEntryList.Subtitle">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/EntrySubtitleTextSize</item>
    </style>


    <style name="txtEntryList.Alt">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/EntryAltTextSize</item>
    </style>

    <style name="txtEntryList.Title.Style">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="outlineSize">6</item>
    </style>

    <style name="txtEntryList.Title.Style.Simple">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/EntryTitleTextSizeSimple</item>
    </style>

    <style name="txtEntryList.Subtitle.Style">
        <item name="android:textIsSelectable">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="outlineSize">6</item>
    </style>


    <style name="txtEntryList.Alt.Style">
        <item name="android:textIsSelectable">false</item>
    </style>



</resources>
